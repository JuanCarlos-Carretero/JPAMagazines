<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="model.Author" table="autors">
        <meta attribute="class-description">
            This class contains the author detail.
        </meta>
        <id name="authorId" type="int" column="id_autor"> </id>
        <property name="name" column="nom" type="string"/>
        <property name="nationality" column="nacionalitat" type="string"/>
        <property name="birthYear" column="any_naixement" type="string"/>
        <property name="active" column="actiu" type="boolean"/>
    </class>
</hibernate-mapping>